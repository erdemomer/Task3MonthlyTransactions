@model Task3.MT.MVCWebUI.Models.TransactionsViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.DisplayFor(model => model.category.Name)</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Category
            </th>
            <th style="background-color:lightgray">
                Description
                </th>
            <th>
                Date
            </th>
            <th>
                Transaction Type
            </th>
            <th>
                Amount
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.transactions)
        {
        <tr>
            <td>
                @Model.categories.FirstOrDefault(x => x.Id == item.CategoryId).Name
            </td>
            <td style="background-color:lightgray">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>

            @if (item.TransactionType == false)
            {
                <td style="color:red">
                   Spending
                </td>
                <td>
                    € <span style="color:red">@Html.DisplayFor(modelItem => item.Amount)</span>

                </td>
            }
            else
            {
                <td style="color:green">  Earning</td>
                <td>
                    € <span style="color:green">@Html.DisplayFor(modelItem => item.Amount)</span>

                </td>

            }



            <td>
                <a asp-action="Edit" asp-route-Id="@item.Id">Edit</a> |
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                <a asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
